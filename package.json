{
  "name": "projectduck",
  "version": "1.0.0",
  "description": "ProjectDuck - A web-based file browser for viewing server directory contents",
  "main": "dist/app.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd backend && nodemon src/app.ts",
    "client:dev": "cd client && vite",
    "build": "npm run client:build && npm run server:build",
    "client:build": "cd client && vite build",
    "server:build": "cd backend && tsc",
    "start": "npm run server:start",
    "server:start": "cd backend && node dist/app.js",
    "lint": "npm run server:lint && npm run client:lint",
    "server:lint": "cd backend && eslint src/**/*.ts",
    "client:lint": "cd client && eslint src/**/*.{ts,tsx}",
    "type-check": "npm run server:type-check && npm run client:type-check",
    "server:type-check": "cd backend && tsc --noEmit",
    "client:type-check": "cd client && tsc --noEmit",
    "clean": "rm -rf backend/dist client/dist public/*"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "devDependencies": {},
  "keywords": [
    "file-browser",
    "document-viewer",
    "markdown",
    "syntax-highlighting",
    "react",
    "typescript",
    "projectduck"
  ],
  "author": "Keith Hung",
  "license": "MIT"
}