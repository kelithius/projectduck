{
  "app": {
    "name": "ProjectDuck",
    "version": "1.0.0",
    "description": "Project Document ÁöÑË´ßÈü≥ - ‰∏ÄÂÄãÂ∞àÁÇ∫Êñá‰ª∂Ê™¢Ë¶ñËÄåË®≠Ë®àÁöÑ Web ÊáâÁî®Á®ãÂºè",
    "author": "ProjectDuck Team",
    "license": "MIT"
  },
  "server": {
    "port": 3001,
    "host": "localhost",
    "basePath": "/Users/Keith/Workspace/ProjectDuck/example",
    "cors": {
      "origin": ["http://localhost:3000"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"]
    },
    "security": {
      "enablePathValidation": true,
      "maxFileSize": 10485760,
      "allowedExtensions": [
        "md", "txt", "json", "js", "ts", "tsx", "jsx",
        "py", "java", "cpp", "c", "go", "rs", "php", "rb",
        "html", "htm", "css", "scss", "sass", "less",
        "xml", "yaml", "yml", "csv", "log", "conf", "ini",
        "png", "jpg", "jpeg", "gif", "svg", "webp", "bmp",
        "mp4", "avi", "mov", "webm", "flv", "mkv"
      ]
    }
  },
  "frontend": {
    "port": 3000,
    "proxy": {
      "/api": "http://localhost:3001",
      "/health": "http://localhost:3001"
    },
    "theme": {
      "defaultMode": "light",
      "supportedModes": ["light", "dark"],
      "primaryColor": "#1890ff",
      "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "codeFont": "Monaco, Consolas, 'Courier New', monospace"
    },
    "features": {
      "syntaxHighlight": true,
      "markdownRendering": true,
      "mermaidCharts": true,
      "plantUMLCharts": false,
      "sectionCollapse": true,
      "fileSearch": true,
      "themeToggle": true
    }
  },
  "api": {
    "baseUrl": "/api",
    "timeout": 30000,
    "retries": 3,
    "endpoints": {
      "directory": "/directory",
      "fileContent": "/file/content",
      "fileInfo": "/file/info",
      "fileRaw": "/file/raw",
      "health": "/health"
    }
  },
  "fileTypes": {
    "markdown": {
      "extensions": ["md", "markdown"],
      "icon": "üìÑ",
      "color": "#326ce5",
      "features": ["syntax-highlight", "gfm", "mermaid"]
    },
    "javascript": {
      "extensions": ["js", "jsx", "mjs"],
      "icon": "üü®",
      "color": "#f7df1e",
      "language": "javascript"
    },
    "typescript": {
      "extensions": ["ts", "tsx"],
      "icon": "üî∑",
      "color": "#3178c6",
      "language": "typescript"
    },
    "python": {
      "extensions": ["py", "pyw"],
      "icon": "üêç",
      "color": "#3776ab",
      "language": "python"
    },
    "json": {
      "extensions": ["json"],
      "icon": "üìã",
      "color": "#000000",
      "language": "json",
      "features": ["formatting", "syntax-highlight"]
    },
    "image": {
      "extensions": ["png", "jpg", "jpeg", "gif", "svg", "webp", "bmp"],
      "icon": "üñºÔ∏è",
      "color": "#ff6b6b"
    },
    "video": {
      "extensions": ["mp4", "avi", "mov", "webm", "flv", "mkv"],
      "icon": "üé¨",
      "color": "#845ef7"
    },
    "text": {
      "extensions": ["txt", "log", "conf", "ini"],
      "icon": "üìù",
      "color": "#495057"
    }
  },
  "ui": {
    "fileTree": {
      "showLineNumbers": false,
      "expandOnHover": false,
      "searchDebounceMs": 300,
      "defaultExpanded": []
    },
    "contentViewer": {
      "showFileInfo": true,
      "autoScroll": true,
      "maxPreviewSize": 1048576,
      "codeTheme": {
        "light": "tomorrow",
        "dark": "vscDarkPlus"
      }
    },
    "layout": {
      "defaultSplit": [30, 70],
      "minPaneSize": 200,
      "resizerSize": 4
    }
  },
  "logging": {
    "level": "info",
    "console": true,
    "file": false,
    "maxFiles": 5,
    "maxSize": "10m"
  },
  "development": {
    "hotReload": true,
    "sourceMap": true,
    "mock": {
      "enabled": false,
      "delay": 100
    }
  },
  "build": {
    "outputDir": "dist",
    "publicPath": "/",
    "minify": true,
    "optimization": {
      "splitChunks": true,
      "treeShaking": true,
      "compression": true
    }
  }
}